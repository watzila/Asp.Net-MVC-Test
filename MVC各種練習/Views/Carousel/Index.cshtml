@model MVCTest.Models.Records
@{
	ViewBag.Title = "輪播圖事件";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Carousel.css" />

<h2>輪播圖事件</h2>
<div>@Model.location.Length</div>

<button class="btn">&lt;</button>
<button class="btn">&gt;</button>

<ul class="ul">
	@for( int i = 0; i < 5; i++ ) {
		<li class="li">
			<h3>@Model.location[i].locationName</h3>
			<p>@Model.location[i].weatherElement[0].time[0].parameter.parameterName</p>
		</li>
	}
</ul>

<hr />

<div>
	<div style="width:30%;height:80px;overflow: hidden;">
		<ul class="u" style="width: 100%;">
			<li>123</li>
			<li>123</li>
			<li>123</li>
		</ul>
	</div>

	<div>
		@for(int i =0;i<3;i++ ) {
			<button class="b">@(i)</button>
		}
	</div>
</div>


