@model MVCTest.Models.Records
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
	.ul {
		position: relative;
		width:1366px;
		height:100px;
		overflow:hidden;
		background-color:yellow;
	}

		.ul li {
			position: absolute;
			width: 20%;
			height: 100px;
			list-style: none;
			border: 1px solid;
			text-align: center;
		}
</style>

<h2>輪播圖事件</h2>
<div>@Model.location.Length</div>

<button id="a"><</button>

<ul class="ul">
	@for( int i = 0; i < 7; i++ ) {
		<li class="li">
			<h3>@Model.location[i].locationName</h3>
			<p>@Model.location[i].weatherElement[0].time[0].parameter.parameterName</p>
		</li>
	}
</ul>

<button id="b">></button>

